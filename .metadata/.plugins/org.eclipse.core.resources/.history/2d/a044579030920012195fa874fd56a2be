package databaseOps;

import java.lang.reflect.Field;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import models.IDbModel;

public class Select<T extends IDbModel> extends DatabaseOp<T>{

	protected Select(T table) throws IllegalArgumentException,
			IllegalAccessException, InstantiationException {
		super(table);
	}
	
	public static <T extends IDbModel> Select<T> from(T table) throws IllegalArgumentException, IllegalAccessException, InstantiationException{
		return new Select<T>(table);
	}

	@Override
	public QueryResult execute(Statement stmt) throws Exceptions {
		sql = "select * from "+tableName+" "+whereStr;
		
		
		
		//save results
		QueryResult result = new QueryResult();
		result.sql = sql;
		ResultSet asd = stmt.executeQuery(sql);
		IDbModel test = saveResults(asd);
		result.stmt = stmt;
		return result;
	}

	private IDbModel saveResults(ResultSet results) throws SQLException, IllegalArgumentException, IllegalAccessException, InstantiationException{
		IDbModel  ret = table.getClass().newInstance();
		for (Field f : fields){
			f.set(ret, results.getString(f.getName()));
		}
		return ret;
	}
}
