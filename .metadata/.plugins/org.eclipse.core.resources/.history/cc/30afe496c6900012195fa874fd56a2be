package databaseOps;

public class InsertInto implements DatabaseOp{
	private String table;
	private String stmt;
	private Object[] values;
	private Object[] columns;
	
	public InsertInto(String table){
		this.table = table;
	}
	
	public void columns(Object... columns){
		this.columns = columns;
	}
	
	public void values(Object... values){
		this.values = values;
	}
	
	public void where(){
		
	}
	
	public void execute() {
		stmt = "insert into"+table;
		for (Object column : columns){
			stmt += column+",";
		}
		
		removeLastComma();
		
		for (Object value : values){
			stmt += value+",";
		}
		
		removeLastComma();
		
	}
	
	private void removeLastComma(){
		// Remove last comma
		stmt = stmt.substring(0, stmt.length());
	}
}
