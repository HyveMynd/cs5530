package databaseOps;

import java.lang.reflect.Field;
import java.sql.*;
import java.util.ArrayList;
import java.util.Collection;

import models.IDbModel;

public class Insert implements DatabaseOp{
	private IDbModel table;
	private String stmt;
	private ArrayList<String> values;
	private ArrayList<String> columns;
	private Statement sql;
	
	public Insert(Statement sql){
		this.sql = sql;
	}
	
	public void into(IDbModel table){
		this.table = table;
	}
	
	public void columns() {
		Field[] fields = table.getClass().getFields();
		for (Field field : fields){
			columns.add(field.getName());
		}
	}

	public void values(Collection<? extends String> values){
		this.values.addAll(values);
	}
	
	public ResultSet execute() throws SQLException {
		stmt = "insert into"+table.getClass().getSimpleName();
		
		for (String column : columns){
			stmt += column+",";
		}
		
		removeLastComma();
		
		for (String value : values){
			stmt += value+",";
		}
		
		removeLastComma();
		return sql.executeQuery(stmt);
	}
	
	private void removeLastComma(){
		// Remove last comma
		stmt = stmt.substring(0, stmt.length());
	}
}
